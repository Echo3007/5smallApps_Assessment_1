<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task3_InterProgrFlag"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_int_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Intersex-Inclusive Pride Flag (2021)"
                android:textColor="@color/coral"
                android:textSize="23sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/intersex_flag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/progress_flag" />

            <TextView
                android:id="@+id/int_flag_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:inputType="textMultiLine"
                android:maxLines="40"
                android:minLines="4"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/intersex"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/intersex_flag_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/go_previous_inter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:onClick="go_previous"
                android:text="Go Back"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="@color/coral"
                android:layout_marginRight="20dp"

                />

            <Button
                android:id="@+id/go_back_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/coral"
                android:onClick="go_back_main"
                android:text="Go Main"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>